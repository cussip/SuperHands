package condition;

public class Star03 {
	public static void main(String[] args) {
		/*
		 * ★ 그리기
		 *     ★
		 *    ★★
		 *   ★★★ 
		 *  ★★★★  
		 */
		int x = 4;	// 세로
		
		for(int i = 0; i < x; i++) {
			for(int j = 0; j <= i; j++) {
				System.out.print("★");
			}
			System.out.println();
		}
		
		
	}	// End - public static void main(String[] args) 
}	// End - public class Star03

