package condition;

public class Star04 {

	public static void main(String[] args) {
		/* ★ 그리기
		 * 
		 *     ★
		 *    ★★★
		 *   ★★★★★
		 *  ★★★★★★★  
		 */
		int x = 9;		// 세로	
		
		for(int i = 1; i <= x; i++) {
			for(int j = x; j > 0; j--) {
				if(i < j + 1 / 2) {
					System.out.print("a");
				} else if (i > j) {
					System.out.print("b");
				} else {
					System.out.print("★");
				}
			}
			System.out.println();
		}
		System.out.println("=================================");
		
		
		
	}	// End - public static void main(String[] args) 
}	// End - public class Star04
