package condition;

public class Star04 {

	public static void main(String[] args) {
		/* ★ 그리기
		 * 
		 *     ★
		 *    ★★★
		 *   ★★★★★
		 *  ★★★★★★★  
		 */
		int x = 9;		// 세로	
		
		for(int i = 0; i < x; i++) {
			for(int j = x - 1; j >= 0; j--) {
				if(i < j / 2) {
					System.out.print(" ");
				} else if (i > j / 2) {
					System.out.print(" ");
				} else {
					System.out.print("★");
				}
			}
			System.out.println();
		}
		System.out.println("=================================");
		
		
		
	}	// End - public static void main(String[] args) 
}	// End - public class Star04
