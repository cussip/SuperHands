package condition;

public class Star03 {
	public static void main(String[] args) {
		/*
		 * ★ 그리기
		 *     ★
		 *    ★★
		 *   ★★★ 
		 *  ★★★★  
		 */
		int x = 3;		// 세로	
		
		for(int i = 0; i < x; i++) {
			for(int j = x - 1; j >= 0; j--) {
				if(i < j) {
					System.out.print(" ");
				} else {
					System.out.print("★");
				}
			}
			System.out.println();
		}
		System.out.println("=================================");
		
		// if문 없이
		for(int i = 0; i < x; i++) {
			for(int j = x - 1; j >= 0; j--) {
				System.out.print("★");
			}
			System.out.println();
		}
		
	}	// End - public static void main(String[] args) 
}	// End - public class Star03

